{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "D:/MinGW/mingw64/bin/g++.exe",
            "args": [
                "-g",
                "-std=c++11",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "-I", "D:/opencv4.4.0/build/x64/mingw/install/include",
                "-L", "D:/opencv4.4.0/build/x64/mingw/bin",
                "-l", "opencv_core440", "-l", "opencv_imgproc440", "-l", "opencv_calib3d440","-l","opencv_objdetect440",
                "-l", "opencv_video440", "-l", "opencv_features2d440", "-l", "opencv_ml440", "-l", "opencv_highgui440",
                "-l", "opencv_flann440", "-l", "opencv_imgcodecs440", "-l", "opencv_photo440", 
                "-l", "opencv_stitching440", "-l", "opencv_videoio440",
                // "-l", "opencv_superres440",  
                // "-l", "opencv_videostab440",
                // "-l", "opencv_shape440"
            ],
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            },
            "options": {
                "cwd": "D:/MinGW/mingw64/bin"
            },
            "problemMatcher":{
                "owner": "cpp",
                "fileLocation":[
                    "relative",
                    "${workspaceFolder}"
                ],
                "pattern":[
                    {
                        "regexp": "^([^\\\\s].*)\\\\((\\\\d+,\\\\d+)\\\\):\\\\s*(.*)$",
                        "file": 1,
                        "location": 2,
                        "message": 3
                    }
                ]
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
